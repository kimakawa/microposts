<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <%= render 'follow_form' if logged_in? %>
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <!-- 
        @micropostsからデータを一つ一つ取り出して、
        micropostというローカル変数として、パーシャル
        app/views/microposts/_micropost.html.erbに渡している
        -->
        <%= render @microposts %>
      </ol>
    <% end %>
  </div>
</div>